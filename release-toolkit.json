{
  "repository": {
    "repo": "release-toolkit",
    "owner": "omriLugasi"
  },
  "workspaces": [
    {
      "branch": "master",
      "folderPath": "src",
      "plugins": [
        {
          "name": "github",
          "tagPattern": "{{tag}}",
          "releasePattern": "{{release}}"
        },
        {
          "name": "npm"
        }
      ]
    }
  ],
  "commitPatterns": [
    {
      "pattern": "^refactor\\(\\):",
      "upgrade": "major",
      "title": "Refactor!"
    },
    {
      "pattern": "^feat\\(\\):",
      "upgrade": "minor",
      "title": "Features"
    },
    {
      "pattern": "^chore\\(\\):",
      "upgrade": "build",
      "title": "Chores"
    },
    {
      "pattern": "^fix\\(\\):",
      "upgrade": "build",
      "title": "Bugs"
    },
    {
      "pattern": "^docs\\(\\):",
      "upgrade": "ignore",
      "title": "Docs"
    },
    {
      "pattern": "^ignore\\(\\):",
      "upgrade": "ignore"
    }
  ]
}
