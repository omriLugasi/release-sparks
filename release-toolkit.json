{
  "repository": {
    "repo": "release-toolkit",
    "owner": "omriLugasi"
  },
  "workdirs": [
    {
      "branch": "main",
      "folderPath": "src",
      "id": "main",
      "plugins": [
        {
          "name": "github",
          "tagPattern": "{{tag}}",
          "releasePattern": "{{release}}"
        },
        {
          "name": "npm",
          "dryRun": true
        }
      ]
    }
  ],
  "commitPatterns": [
    {
      "pattern": "^refactor\\(\\):",
      "upgrade": "major",
      "title": "Refeactor!"
    },
    {
      "pattern": "^feat\\(\\):",
      "upgrade": "minor",
      "title": "Features"
    },
    {
      "pattern": "^chore\\(\\):",
      "upgrade": "build",
      "title": "Chores"
    },
    {
      "pattern": "^ignore\\(\\):",
      "upgrade": "ignore"
    }
  ]
}
